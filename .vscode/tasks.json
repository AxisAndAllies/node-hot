{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "build",
			"args": ["run", "build"],
      "problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"args": ["run", "watch"],
      "problemMatcher": "$tsc-watch"
		}
	]
}
